    display.print(vms[index].name);
    if (vms[index].locked == true){
      if (index == selectedVM) {
        display.drawBitmap(106, y+1, lockIcon, 7, 9, SSD1306_BLACK);
      }
      else{
        display.drawBitmap(106, y+1, lockIcon, 7, 9, SSD1306_WHITE);
      }
