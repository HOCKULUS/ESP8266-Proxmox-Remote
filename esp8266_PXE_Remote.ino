// ================== Loop ==================
void loop() {
  btnLeft.update();
  btnRight.update();
  btnPower.update();
  btnMode.update();

  bool pressed = false;

  if (vmCount > 0) {
    if (btnLeft.fell()) {
      if(displayActive) { 
        selectedVM = (selectedVM - 1 + vmCount) % vmCount;
        if (!isIndexVisible(selectedVM)) {
          scrollOffset = (scrollOffset - 1 + vmCount) % vmCount;
        }
      }
      pressed = true;
    }
    if (btnRight.fell()) {
      if(displayActive) {
        selectedVM = (selectedVM + 1) % vmCount;
        if (!isIndexVisible(selectedVM)) {
          scrollOffset = (scrollOffset + 1) % vmCount;
        }
      }
      pressed = true;
    }
    if (displayActive) {
  if (btnPower.fell()) {
    pressStart = millis();
    longPressTriggered = false;
    pressed = true;
  }
  if (btnPower.read() == LOW) {
      unsigned long pressDuration = millis() - pressStart;
      if (pressDuration >= longPressTime && !longPressTriggered) {
        Serial.println("Langer Druck → VM sperren");
        setVMLocked(vms[selectedVM], !(vms[selectedVM].locked)); // direkt sperren
        longPressTriggered = true;          // nur einmal pro Press
      }
    }
    if (btnPower.rose()) {
      unsigned long pressDuration = millis() - pressStart;

      if (pressDuration < longPressTime) {
        if (!vms[selectedVM].locked) {
          Serial.println("Kurzer Druck");
          handlePower(vms[selectedVM]);
        } else {
          displayInfo("Press and hold to remove lock");
        }
      }
    }
  }

  drawVMList();
  }

  if (pressed) {
    lastAction = millis();
    if (!displayActive) wakeDisplay();
  }

  if (displayActive && millis() - lastAction > sleepTimeout) sleepDisplay();

  if (displayActive && millis() - lastCheck > checkInterval) {
    updateOneVMStatus();
    lastCheck = millis();
  }
}

// ================== VM Discovery ==================
void discoverVMs() {
  WiFiClientSecure client;
  client.setInsecure();
  HTTPClient http;

  vmCount = 0;
  display.clearDisplay();
  display.setTextSize(1);
  display.setTextColor(SSD1306_WHITE);
  display.setCursor(0,0);
  display.println("Suche VMs...");
  display.display();

  int totalVMs = 130;
  int barWidth = SCREEN_WIDTH - 10;

  for (int id = 100; id <= totalVMs; id++) {
    String url = String("https://") + proxmoxHost + ":8006/api2/json/nodes/" + nodeName + "/qemu/" + id + "/status/current";
    if (http.begin(client, url)) {
      http.addHeader("Authorization", String("PVEAPIToken=") + apiToken);
      int code = http.GET();
      if (code == 200) {
        String payload = http.getString();
        bool running = payload.indexOf("\"status\":\"running\"") >= 0;

        String name = "VM " + String(id);
        int nameStart = payload.indexOf("\"name\":\"");
        if (nameStart>0) {
          nameStart += 8;
          int nameEnd = payload.indexOf("\"", nameStart);
          if (nameEnd>nameStart) name = payload.substring(nameStart, nameEnd);
        }

        bool locked = false;
        int tagStart = payload.indexOf("\"tags\":\"");
        if (tagStart >= 0) {
          tagStart += 8;
          int tagEnd = payload.indexOf("\"", tagStart);
          if (tagEnd > tagStart) {
            String tags = payload.substring(tagStart, tagEnd);
            locked = tags.indexOf("locked") >= 0;
          }
        }
        vms[vmCount].locked = locked;

        // VM speichern
        vms[vmCount].id = id;
        vms[vmCount].name = name;
        vms[vmCount].running = running;
        vmCount++;

        Serial.println("→ " + name);
        int y = 16 + (vmCount-1)*10;
        display.fillRect(0, 10, SCREEN_WIDTH, 10, SSD1306_BLACK);
        display.setCursor(0, 10);
        display.print("-> ");
        display.print(name);
        display.print(" ");
        display.display();
      }
      http.end();
    }
    int current = id - 100 + 1;
    int progress = (barWidth / (totalVMs - 100) ) * current;
    int barX = 5;
    int barY = SCREEN_HEIGHT - 10;
    int barH = 5;
    display.fillRect(barX, barY, barWidth, barH, SSD1306_BLACK);
    display.drawRect(barX, barY, barWidth, barH, SSD1306_WHITE);
    display.fillRect(barX, barY, progress, barH, SSD1306_WHITE);
    Serial.println(progress);
    Serial.println(barWidth);
    Serial.println(current);
    display.display();
  }

  if (vmCount == 0) {
    vms[0] = {0, "Keine VMs", false};
    vmCount = 1;
    display.fillRect(0,16,SCREEN_WIDTH,10,SSD1306_BLACK);
    display.setCursor(0,16);
    display.println("Keine VMs gefunden");
    display.display();
  }

  delay(50);
}

