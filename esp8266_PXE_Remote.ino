// ================== Power Control ==================
void handlePower(VM &vm) {
  if (vm.id==0) return;
  String action = vm.running?"stop":"start";
  String url = String("https://")+proxmoxHost+":8006/api2/json/nodes/"+nodeName+"/qemu/"+vm.id+"/status/"+action;
  WiFiClientSecure client;
  client.setInsecure();
  HTTPClient http;
  if (http.begin(client,url)) {
    http.addHeader("Authorization", String("PVEAPIToken=")+apiToken);
    http.sendRequest("POST");
    http.end();
  }
  vm.running = !vm.running;
  drawVMList();
}

