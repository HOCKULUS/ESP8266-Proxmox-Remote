  int visible = min(VISIBLE_LINES, vmCount);
  for (int i = 0; i < visible; i++) {
    int index = (scrollOffset + i) % vmCount;
    int y = i * 12;
    if (index == selectedVM) {
      display.fillRect(0, y, SCREEN_WIDTH, 12, SSD1306_WHITE);
