  }
  display.display();
}

// ================== Status Updates ==================
void updateOneVMStatus() {
  if (vmCount==0) return;

  String url = String("https://") + proxmoxHost + ":8006/api2/json/nodes/" + nodeName + "/qemu/" + vms[vmIndexToCheck].id + "/status/current";
  WiFiClientSecure client;
  client.setInsecure();
  HTTPClient http;
  if (http.begin(client, url)) {
    http.addHeader("Authorization", String("PVEAPIToken=") + apiToken);
    int code = http.GET();
    if (code == 200) {
      String payload = http.getString();
      vms[vmIndexToCheck].running = payload.indexOf("\"status\":\"running\"")>=0;
      bool locked = false;
      int tagStart = payload.indexOf("\"tags\":\"");
      if (tagStart >= 0) {
        tagStart += 8;
        int tagEnd = payload.indexOf("\"", tagStart);
        if (tagEnd > tagStart) {
          String tags = payload.substring(tagStart, tagEnd);
          locked = tags.indexOf("locked") >= 0;
        }
      }
      vms[vmIndexToCheck].locked = locked;
    }
    http.end();
  }
  vmIndexToCheck = (vmIndexToCheck + 1) % vmCount;
  drawVMList();
}

// ================== Lock Update ==================
void setVMLocked(VM &vm, bool locked) {
  WiFiClientSecure client;
  client.setInsecure();
  HTTPClient http;
  String getUrl = String("https://") + proxmoxHost + ":8006/api2/json/nodes/" + nodeName + "/qemu/" + vm.id + "/config";
  String tags = "";
  if (http.begin(client, getUrl)) {
    http.addHeader("Authorization", String("PVEAPIToken=") + apiToken);
    int code = http.GET();
    if (code == 200) {
      String payload = http.getString();
      int t1 = payload.indexOf("\"tags\":\"");
      if (t1 > 0) {
        t1 += 8;
        int t2 = payload.indexOf("\"", t1);
        if (t2 > t1) tags = payload.substring(t1, t2);
      }
    }
    http.end();
  }
  tags.trim();
  bool hasLocked = tags.indexOf("locked") >= 0;

  if (locked && !hasLocked) {
    tags += ";locked";
  } else if (!locked && hasLocked) {
    int pos = tags.indexOf("locked");
    if (pos >= 0) {
      int end = tags.indexOf(";", pos);
      if (end >= 0) tags.remove(pos, end - pos + 1);
      else tags.remove(pos);
    }
    tags.trim();
    if (tags.endsWith(";")) tags.remove(tags.length() - 1);
  }
  String putUrl = getUrl;
  tags.replace(";", "%3B");
  String body = "tags=" + tags;
  if (http.begin(client, putUrl)) {
    http.addHeader("Authorization", String("PVEAPIToken=") + apiToken);
    http.addHeader("Content-Type", "application/x-www-form-urlencoded");
    int code = http.sendRequest("PUT", body);
    if (code == 200) {
      Serial.println(locked ? "VM gesperrt (Tag 'locked' gesetzt)" : "VM entsperrt ('locked' entfernt)");
      vm.locked = locked;
    } else {
      Serial.print("Fehler beim Setzen des Tags: ");
      Serial.print(code);
    }
    http.end();
  }
  drawVMList();
}

